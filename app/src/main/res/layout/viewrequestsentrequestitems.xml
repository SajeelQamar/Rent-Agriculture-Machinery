<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true"
    android:background="#E44444"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:background="#C4F871">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginStart="75dp"
                android:layout_marginTop="15dp"
                android:textStyle="italic"
                android:text="Request has sent!"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:id="@+id/requesthasbeensent"/>
            <TextView
                android:layout_width="185dp"
                android:layout_height="27dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="-25dp"
                android:textStyle="bold"
                android:text="Accept"
                android:textColor="#B60606"
                android:textSize="20sp"
                android:id="@+id/acceptreject"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:text="User:"
                android:id="@+id/eraseruser"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:textSize="15sp"
                android:text="Name:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/namev"
                android:layout_marginStart="45dp"
                android:layout_marginTop="-22dp"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:textSize="14sp"
                android:text="Machinery:"
                android:id="@+id/erasermach"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_marginStart="6dp"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="-20dp"
                android:textSize="14sp"
                android:text="Name:"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:id="@+id/mname"
                android:layout_marginStart="78dp"
                />

            <TextView
                android:layout_width="170dp"
                android:layout_height="27dp"
                android:textColor="@color/black"
                android:layout_marginStart="92dp"
                android:text="No new request"
                android:layout_marginTop="-5dp"
                android:textStyle="bold"
                android:id="@+id/norequestsent"
                android:textSize="18sp"
              />



        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>